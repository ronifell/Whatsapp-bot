{
  "name": "cotafacil-automacao",
  "version": "1.0.0",
  "description": "Automação de cotação de consórcio via WhatsApp + IA + RPA",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:frontend": "node -r dotenv/config src/index.js dotenv_config_path=.env",
    "dev": "node --watch src/index.js",
    "dev:frontend": "node --watch -r dotenv/config src/index.js dotenv_config_path=.env",
    "test:rpa": "node src/test-rpa.js",
    "test:login": "node src/test-login.js",
    "test:flow": "node src/test-full-flow.js",
    "test:flow:step": "node src/test-full-flow.js step",
    "postinstall": "npx playwright install chromium && npx playwright install-deps chromium || true",
    "install:browsers": "npx playwright install chromium",
    "configure:webhook": "node configure-webhook.js",
    "verify:env": "node verify-env.js"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "rpa",
    "consortium",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "express": "^4.18.2",
    "playwright": "^1.49.1",
    "dotenv": "^16.4.7",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
